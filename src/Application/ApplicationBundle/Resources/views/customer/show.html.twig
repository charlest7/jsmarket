{% extends 'base.html.twig' %}

{% block body %}
    <h1>Customer</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Customerid</th>
                <td>{{ customer.customerId }}</td>
            </tr>
            <tr>
                <th>Customername</th>
                <td>{{ customer.customerName }}</td>
            </tr>
            <tr>
                <th>Customerbirthdate</th>
                <td>{% if customer.customerBirthdate %}{{ customer.customerBirthdate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Customerjoindate</th>
                <td>{% if customer.customerJoinDate %}{{ customer.customerJoinDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('customer_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('customer_edit', { 'id': customer.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
