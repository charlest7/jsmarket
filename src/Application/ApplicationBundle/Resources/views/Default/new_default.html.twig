{% extends 'AppApplicationBundle:Default:new_base.html.twig'%}

{% block stylesheet %}	
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
{% endblock %}

  {% block body %} 
      <!-- Statistics Section-->
      <section class="statistics" style="margin-top:30px;">
        <div class="container-fluid">
          <div class="row d-flex">
              <div class="col-lg-4">
                <!-- User Actibity-->
                <div class="card user-activity">
                    <h2 class="display h4">Product Statistic</h2>
                    <div class="number">210</div>
                    <h3 class="h4 display">Product Available</h3>
                    <div class="progress">
                      <div role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" class="progress-bar progress-bar bg-primary"></div>
                    </div>
                    <div class="page-statistics d-flex justify-content-between">
                      <div class="page-statistics-left"><span>Product Sell</span><strong>230</strong></div>
                      <div class="page-statistics-right"><span>Sell Percentage</span><strong>73.4%</strong></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
              <!-- Monthly Usage-->
              <div class="card data-usage">
                <h2 class="display h4">Sales Percentage</h2>
                <div class="row d-flex align-items-center">
                  <div class="col-sm-6">
                    <div id="progress-circle" class="d-flex align-items-center justify-content-center"></div>
                  </div>
                  <div class="col-sm-6"><strong class="text-primary" style="font-size:15px;">Rp. 132.768.009</strong></div>
                </div>
                <div class="page-statistics d-flex justify-content-between">
                    <div class="page-statistics-left" style="margin-top:10px;"><span style="color:black;">Total Sales Last Month</span><strong style="color:#33b35a">Rp 152.908.657</strong></div>
                  </div>
              </div>
            </div>
            <div class="col-lg-4">
              <!-- User Actibity-->
              <div class="card user-activity">
                <h2 class="display h4">Transaction Statistic</h2>
                <div class="number">210</div>
                <h3 class="h4 display">Total Transaction</h3>
                <div class="progress">
                  <div role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" class="progress-bar progress-bar bg-primary"></div>
                </div>
                <div class="page-statistics d-flex justify-content-between">
                  <div class="page-statistics-left"><span>Product Sell</span><strong>230</strong></div>
                  <div class="page-statistics-right"><span>Sell Percentage</span><strong>73.4%</strong></div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="container-fluid">
          <div class="row chart-line" style="margin-top:25px;margin-bottom:25px;">
            <div class="col-lg-6">
              <div class="card line-chart-example">
                <div class="card-header d-flex align-items-center">
                  <h4>Total Sales</h4>
                </div>
                <div class="card-body"><div class="chartjs-size-monitor" style="position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;"><div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div></div><div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:200%;height:200%;left:0; top:0"></div></div></div>
                  <canvas id="lineChartExample" width="643" height="321" class="chartjs-render-monitor" style="display: block; height: 214px; width: 429px;"></canvas>
                </div>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="card bar-chart-example">
                <div class="card-header d-flex align-items-center">
                  <h4>Total Transaction
                  </h4>
                </div>
                <div class="card-body"><div class="chartjs-size-monitor" style="position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;"><div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div></div><div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:200%;height:200%;left:0; top:0"></div></div></div>
                  <canvas id="barChartExample" width="643" height="321" class="chartjs-render-monitor" style="display: block; height: 214px; width: 429px;"></canvas>
                </div>
              </div>
            </div>
          </div>
          <div class="row chart-line" style="margin-top:25px;margin-bottom:25px;">
            <div class="col-lg-6">
              <div class="card pie-chart-example">
                <div class="card-header d-flex align-items-center">
                  <h4>Pie Chart Example</h4>
                </div>
                <div class="card-body">
                  <div class="chart-container"><div class="chartjs-size-monitor" style="position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;"><div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div></div><div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:200%;height:200%;left:0; top:0"></div></div></div>
                    <canvas id="pieChartExample" width="643" height="321" class="chartjs-render-monitor" style="display: block; height: 214px; width: 429px;"></canvas>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="card polar-chart-example">
                <div class="card-header d-flex align-items-center">
                  <h4>Ploar Chart Example</h4>
                </div>
                <div class="card-body">
                  <div class="chart-container"><div class="chartjs-size-monitor" style="position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;"><div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div></div><div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:200%;height:200%;left:0; top:0"></div></div></div>
                    <canvas id="polarChartExample" width="643" height="321" class="chartjs-render-monitor" style="display: block; height: 214px; width: 429px;"></canvas>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="card radar-chart-example">
              <div class="card-header d-flex align-items-center">
                <h4>Radar Chart Example</h4>
              </div>
              <div class="card-body">
                <div class="chart-container"><div class="chartjs-size-monitor" style="position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;"><div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div></div><div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:200%;height:200%;left:0; top:0"></div></div></div>
                  <canvas id="radarChartExample" width="750" height="375" class="chartjs-render-monitor" style="display: block; height: 250px; width: 500px;"></canvas>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      </section>
{% endblock %}
